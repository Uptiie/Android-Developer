<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="50dp"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView

        android:id="@+id/cv_holder"
        app:cardElevation="20dp"
        app:cardCornerRadius="3dp"
        app:cardPreventCornerOverlap="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryColor"
            android:padding="8dp"
            android:layout_margin="8dp">

            <ImageView
                android:id="@+id/iv_course"
                android:src="@drawable/getting_swole"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="250dp"
                android:layout_height="250dp"/>

            <TextView
                android:id="@+id/tv_course_name"
                android:text="Name of course "
                android:padding="8dp"
                android:textColor="@color/primaryTextColor"
                app:layout_constraintLeft_toRightOf="@id/iv_course"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_course_benefits"
                android:text="Benefits of course"
                android:padding="8dp"
                android:textColor="@color/primaryTextColor"
                app:layout_constraintTop_toBottomOf="@id/tv_course_name"
                app:layout_constraintLeft_toRightOf="@id/iv_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_instructor"
                android:text="Course Instructor"
                android:textColor="@color/primaryTextColor"
                app:layout_constraintLeft_toRightOf="@id/iv_course"
                app:layout_constraintTop_toBottomOf="@id/tv_course_benefits"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_time"
                android:text="Course Time"
                android:textColor="@color/primaryTextColor"
                app:layout_constraintLeft_toRightOf="@id/iv_course"
                app:layout_constraintTop_toBottomOf="@id/tv_instructor"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/iv_register"
                android:src="@drawable/register_image_2"
                android:background="@color/primaryColor"
                android:padding="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_course"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_time"
                android:layout_width="100dp"
                android:layout_height="100dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>